<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Event">


    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homeback"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="500dp"
            android:layout_height="84dp"
            app:srcCompat="@android:color/holo_blue_bright" />

        <EditText
            android:id="@+id/titleet"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/Dateet"
            android:layout_marginTop="99dp"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/Dateet"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="179dp"
            android:ems="10"
            android:hint="Date Of Event"
            android:inputType="date"/>

        <EditText
            android:id="@+id/entryfeeet"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ems="10"
            android:hint="Entry Fee(IF ANY)"
            android:inputType="text|number" />

        <EditText
            android:id="@+id/durationet"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp"
            android:ems="10"
            android:hint="Duration In MINUTES"
            android:inputType="number" />

        <EditText
            android:id="@+id/locationet"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="175dp"
            android:ems="10"
            android:hint="Location"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/additionalet"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Any Additional Information??"
            android:inputType="textPersonName" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>